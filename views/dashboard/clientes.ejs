        .btn-outline-custom:hover {
            background: var(--nav-primary-color);
            color: white;
        }

        .table-custom {
            margin: 0;
        }

        .table-custom thead th {
            background-color: #f8f9fa;
            border-top: none;
            border-bottom: 2px solid #e9ecef;
            padding: 1rem 1.5rem;
            font-weight: 600;
            color: var(--nav-primary-color);
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .table-custom tbody td {
            padding: 1rem 1.5rem;
            vertical-align: middle;
            border-bottom: 1px solid #f1f3f4;
        }

        .table-custom tbody tr:hover {
            background-color: #f8f9fa;
        }

        .status-badge {
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
            text-transform: capitalize;
        }

        .status-badge.pendiente {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-badge.cotizada {
            background-color: #cce5ff;
            color: #004085;
        }

        .status-badge.programada {
            background-color: #d1ecf1;
            color: #0c5460;
        }

        .status-badge.completada {
            background-color: #d4edda;
            color: #155724;
        }

        .status-badge.cancelada {
            background-color: #f8d7da;
            color: #721c24;
        }

        .status-badge.activo {
            background-color: #d4edda;
            color: #155724;
        }

        .status-badge.inactivo {
            background-color: #f8d7da;
            color: #721c24;
        }

        .btn-action {
            background: var(--info-color);
            color: white;
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
            text-decoration: none;
            font-size: 0.8rem;
            font-weight: 500;
            transition: var(--nav-transition);
            border: none;
        }

        .btn-action:hover {
            background: #138496;
            color: white;
            transform: translateY(-1px);
        }

        /* Priority Alerts */
        .priority-alerts {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 2rem;
            margin-bottom: 3rem;
        }

        .alert-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            border-radius: var(--border-radius);
            margin-bottom: 1rem;
            border-left: 4px solid;
        }

        .alert-item.high {
            background: rgba(220, 53, 69, 0.1);
            border-left-color: var(--danger-color);
        }

        .alert-item.medium {
            background: rgba(255, 193, 7, 0.1);
            border-left-color: var(--warning-color);
        }

        .alert-item.low {
            background: rgba(23, 162, 184, 0.1);
            border-left-color: var(--info-color);
        }

        .alert-icon {
            font-size: 1.2rem;
        }

        .alert-icon.high { color: var(--danger-color); }
        .alert-icon.medium { color: var(--warning-color); }
        .alert-icon.low { color: var(--info-color); }

        .alert-content {
            flex: 1;
        }

        .alert-title {
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .alert-description {
            font-size: 0.9rem;
            color: var(--nav-secondary-color);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .nav-menu {
                display: none;
            }

            .dashboard-container {
                padding: 1.5rem 0;
            }

            .page-title {
                font-size: 2rem;
            }

            .stats-card {
                margin-bottom: 1rem;
            }

            .card-content {
                flex-direction: column;
                text-align: center;
                gap: 1rem;
            }

            .table-header {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .action-grid {
                grid-template-columns: 1fr;
            }

            .charts-grid .row > div {
                margin-bottom: 2rem;
            }
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in-up {
            animation: fadeInUp 0.6s ease-out;
        }

        .stagger-1 { animation-delay: 0.1s; }
        .stagger-2 { animation-delay: 0.15s; }
        .stagger-3 { animation-delay: 0.2s; }
        .stagger-4 { animation-delay: 0.25s; }
        .stagger-5 { animation-delay: 0.3s; }
        .stagger-6 { animation-delay: 0.35s; }
        .stagger-7 { animation-delay: 0.4s; }
    </style>
</head>
