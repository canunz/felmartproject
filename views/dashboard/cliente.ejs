<!-- views/dashboard/cliente.ejs -->
<div class="container-fluid">
    <!-- Tarjetas de resumen -->
    <div class="row mb-4">
      <!-- Mis Solicitudes -->
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <div class="card-body d-flex align-items-center">
            <div class="flex-shrink-0 bg-primary bg-opacity-10 p-3 rounded-circle me-3">
              <i class="fas fa-file-alt fa-2x text-primary"></i>
            </div>
            <div>
              <h6 class="card-title">Mis Solicitudes</h6>
              <h3 class="mb-0"><%= typeof misSolicitudes !== 'undefined' ? misSolicitudes : 0 %></h3>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Solicitudes Pendientes -->
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <div class="card-body d-flex align-items-center">
            <div class="flex-shrink-0 bg-warning bg-opacity-10 p-3 rounded-circle me-3">
              <i class="fas fa-clock fa-2x text-warning"></i>
            </div>
            <div>
              <h6 class="card-title">Pendientes</h6>
              <h3 class="mb-0"><%= typeof solicitudesPendientes !== 'undefined' ? solicitudesPendientes : 0 %></h3>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Próximas Visitas -->
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <div class="card-body d-flex align-items-center">
            <div class="flex-shrink-0 bg-info bg-opacity-10 p-3 rounded-circle me-3">
              <i class="fas fa-calendar-check fa-2x text-info"></i>
            </div>
            <div>
              <h6 class="card-title">Próximas Visitas</h6>
              <h3 class="mb-0"><%= typeof proximasVisitas !== 'undefined' ? proximasVisitas : 0 %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Acciones Rápidas -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title mb-0">Acciones Rápidas</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-4 mb-3">
                <a href="/solicitudes/crear" class="btn btn-primary w-100 d-flex align-items-center justify-content-center py-3">
                  <i class="fas fa-plus-circle me-2"></i> Nueva Solicitud de Retiro
                </a>
              </div>
              <div class="col-md-4 mb-3">
                <a href="/visitas/calendario" class="btn btn-info w-100 d-flex align-items-center justify-content-center py-3">
                  <i class="fas fa-calendar me-2"></i> Ver Calendario
                </a>
              </div>
              <div class="col-md-4 mb-3">
                <a href="/certificados" class="btn btn-success w-100 d-flex align-items-center justify-content-center py-3">
                  <i class="fas fa-certificate me-2"></i> Mis Certificados
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Mis Solicitudes Recientes -->
    <div class="row">
      <div class="col-12 mb-4">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Mis Solicitudes Recientes</h5>
            <a href="/solicitudes" class="btn btn-sm btn-outline-primary">Ver todas</a>
          </div>
          <div class="card-body">
            <% if (typeof ultimasSolicitudes !== 'undefined' && ultimasSolicitudes && ultimasSolicitudes.length > 0) { %>
              <div class="table-container">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Fecha</th>
                      <th>Dirección</th>
                      <th>Estado</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% ultimasSolicitudes.forEach(solicitud => { %>
                      <tr>
                        <td><%= solicitud.id %></td>
                        <td><%= new Date(solicitud.fechaSolicitud).toLocaleDateString('es-ES') %></td>
                        <td><%= solicitud.direccionRetiro %></td>
                        <td>
                          <% 
                            let badgeClass = 'secondary';
                            switch(solicitud.estado) {
                              case 'pendiente': badgeClass = 'warning'; break;
                              case 'cotizada': badgeClass = 'info'; break;
                              case 'programada': badgeClass = 'primary'; break;
                              case 'completada': badgeClass = 'success'; break;
                              case 'cancelada': badgeClass = 'danger'; break;
                            }
                          %>
                          <span class="badge bg-<%= badgeClass %>"><%= solicitud.estado %></span>
                        </td>
                        <td>
                          <a href="/solicitudes/detalles/<%= solicitud.id %>" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-eye"></i>
                          </a>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-center py-3 text-muted">No tienes solicitudes recientes</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>