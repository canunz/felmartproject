<!-- views/dashboard/index.ejs -->
<%- include('../partials/header') %>

<div class="container-fluid mt-4">
  <!-- Panel de Control Header -->
  <div class="mb-4">
    <h2 class="text-primary">Panel de Control - Cliente</h2>
    <p class="text-muted">Bienvenido al sistema de gestión de residuos Felmart</p>
  </div>
  
  <!-- Tarjetas de Estadísticas -->
  <div class="row mb-4">
    <div class="col-md-4 mb-3">
      <div class="stat-card solicitudes-card">
        <div class="stat-card-content">
          <div class="stat-card-icon">
            <i class="fas fa-file-alt"></i>
          </div>
          <div>
            <h3 class="stat-card-title">Mis Solicitudes</h3>
            <p class="stat-card-value"><%= countSolicitudes %></p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4 mb-3">
      <div class="stat-card pendientes-card">
        <div class="stat-card-content">
          <div class="stat-card-icon">
            <i class="fas fa-clock"></i>
          </div>
          <div>
            <h3 class="stat-card-title">Pendientes</h3>
            <p class="stat-card-value"><%= countPendientes %></p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4 mb-3">
      <div class="stat-card visitas-card">
        <div class="stat-card-content">
          <div class="stat-card-icon">
            <i class="fas fa-calendar-check"></i>
          </div>
          <div>
            <h3 class="stat-card-title">Próximas Visitas</h3>
            <p class="stat-card-value"><%= countVisitas %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Acciones Rápidas -->
  <div class="actions-section mb-4">
    <h3 class="actions-title">Acciones Rápidas</h3>
    
    <div class="row mt-3">
      <div class="col-md-4 mb-3">
        <a href="/solicitudes/nueva" class="action-button solicitud-button">
          <i class="fas fa-plus-circle"></i>
          <span>Nueva Solicitud de Retiro</span>
        </a>
      </div>
      
      <div class="col-md-4 mb-3">
        <a href="/calendario" class="action-button calendario-button">
          <i class="fas fa-calendar-alt"></i>
          <span>Ver Calendario</span>
        </a>
      </div>
      
      <div class="col-md-4 mb-3">
        <a href="/certificados" class="action-button certificados-button">
          <i class="fas fa-certificate"></i>
          <span>Mis Certificados</span>
        </a>
      </div>
    </div>
  </div>
  
  <!-- Solicitudes recientes -->
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0">Mis Solicitudes Recientes</h5>
          <a href="/solicitudes" class="btn btn-sm btn-outline-primary">Ver todas</a>
        </div>
        <div class="card-body">
          <% if (solicitudesRecientes && solicitudesRecientes.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Tipo de Residuo</th>
                    <th>Fecha de Retiro</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% solicitudesRecientes.forEach(solicitud => { %>
                    <tr>
                      <td><%= solicitud.id %></td>
                      <td><%= solicitud.tipo_residuo %></td>
                      <td><%= new Date(solicitud.fecha_retiro).toLocaleDateString('es-ES') %></td>
                      <td>
                        <span class="badge bg-<%= 
                          solicitud.estado === 'pendiente' ? 'warning' : 
                          solicitud.estado === 'confirmada' ? 'success' : 
                          solicitud.estado === 'completada' ? 'primary' : 
                          solicitud.estado === 'cancelada' ? 'danger' : 'secondary' 
                        %>">
                          <%= solicitud.estado %>
                        </span>
                      </td>
                      <td>
                        <a href="/solicitudes/<%= solicitud.id %>" class="btn btn-sm btn-info text-white">
                          <i class="fas fa-eye"></i> Ver
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center my-4 empty-state">
              <i class="fas fa-file-alt fa-4x text-muted mb-3"></i>
              <p class="lead text-muted">No tienes solicitudes recientes</p>
              <a href="/solicitudes/nueva" class="btn btn-primary mt-2">
                <i class="fas fa-plus"></i> Crear una solicitud
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>