<!-- views/dashboard/index.ejs -->
<%- include('../partials/header') %>

<div class="container-fluid mt-4">
  <!-- Panel de Control Header -->
  <div class="mb-4">
    <h2 style="font-size: 1.8rem; font-weight: 700; color: #00616e;">Panel de Control - Cliente</h2>
    <p style="color: #6c757d;">Bienvenido al sistema de gestión de residuos Felmart</p>
  </div>
  
  <!-- Tarjetas de Estadísticas -->
  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="card" style="box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08); border-radius: 12px; border: none; transition: all 0.3s ease;">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div style="width: 64px; height: 64px; background-color: rgba(0, 97, 110, 0.15); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 1rem;">
              <i class="fas fa-file-alt" style="font-size: 1.75rem; color: #00616e;"></i>
            </div>
            <div>
              <h5 class="card-title mb-1" style="font-size: 1.1rem; font-weight: 600;">Mis Solicitudes</h5>
              <h2 class="counter mb-0" style="font-size: 2.5rem; font-weight: 700;"><%= countSolicitudes %></h2>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4 mb-4">
      <div class="card" style="box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08); border-radius: 12px; border: none; transition: all 0.3s ease;">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div style="width: 64px; height: 64px; background-color: rgba(255, 159, 0, 0.15); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 1rem;">
              <i class="fas fa-clock" style="font-size: 1.75rem; color: #ff9f00;"></i>
            </div>
            <div>
              <h5 class="card-title mb-1" style="font-size: 1.1rem; font-weight: 600;">Pendientes</h5>
              <h2 class="counter mb-0" style="font-size: 2.5rem; font-weight: 700;"><%= countPendientes %></h2>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4 mb-4">
      <div class="card" style="box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08); border-radius: 12px; border: none; transition: all 0.3s ease;">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div style="width: 64px; height: 64px; background-color: rgba(61, 140, 64, 0.15); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 1rem;">
              <i class="fas fa-calendar-check" style="font-size: 1.75rem; color: #3D8C40;"></i>
            </div>
            <div>
              <h5 class="card-title mb-1" style="font-size: 1.1rem; font-weight: 600;">Próximas Visitas</h5>
              <h2 class="counter mb-0" style="font-size: 2.5rem; font-weight: 700;"><%= countVisitas %></h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Acciones Rápidas -->
  <div class="card mb-4" style="box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08); border-radius: 12px; border: none;">
    <div class="card-header" style="background-color: white; border-bottom: 1px solid #e9ecef;">
      <h5 class="card-title" style="font-size: 1.25rem; font-weight: 600; color: #00616e; margin-bottom: 0;">Acciones Rápidas</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-4 mb-3">
          <a href="/solicitudes/nueva" class="btn btn-primary d-flex align-items-center justify-content-center w-100" style="height: 3.5rem; background-color: #0d6efd; border: none; font-weight: 500; padding: 1rem; border-radius: 8px;">
            <i class="fas fa-plus-circle me-2" style="font-size: 1.25rem;"></i>
            <span>Nueva Solicitud de Retiro</span>
          </a>
        </div>
        
        <div class="col-md-4 mb-3">
          <a href="/calendario" class="btn btn-info text-white d-flex align-items-center justify-content-center w-100" style="height: 3.5rem; background-color: #0dcaf0; border: none; font-weight: 500; padding: 1rem; border-radius: 8px;">
            <i class="fas fa-calendar-alt me-2" style="font-size: 1.25rem;"></i>
            <span>Ver Calendario</span>
          </a>
        </div>
        
        <div class="col-md-4 mb-3">
          <a href="/certificados" class="btn btn-success d-flex align-items-center justify-content-center w-100" style="height: 3.5rem; background-color: #20c997; border: none; font-weight: 500; padding: 1rem; border-radius: 8px;">
            <i class="fas fa-certificate me-2" style="font-size: 1.25rem;"></i>
            <span>Mis Certificados</span>
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Solicitudes recientes -->
  <div class="row">
    <div class="col-md-12">
      <div class="card" style="box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08); border-radius: 12px; border: none;">
        <div class="card-header d-flex justify-content-between align-items-center" style="background-color: white; border-bottom: 1px solid #e9ecef;">
          <h5 class="card-title mb-0" style="font-size: 1.25rem; font-weight: 600; color: #00616e;">Mis Solicitudes Recientes</h5>
          <a href="/solicitudes" class="btn btn-sm btn-outline-primary">Ver todas</a>
        </div>
        <div class="card-body">
          <% if (solicitudesRecientes && solicitudesRecientes.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Tipo de Residuo</th>
                    <th>Fecha de Retiro</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% solicitudesRecientes.forEach(solicitud => { %>
                    <tr>
                      <td><%= solicitud.id %></td>
                      <td><%= solicitud.tipo_residuo %></td>
                      <td><%= new Date(solicitud.fecha_retiro).toLocaleDateString('es-ES') %></td>
                      <td>
                        <span class="badge bg-<%= 
                          solicitud.estado === 'pendiente' ? 'warning' : 
                          solicitud.estado === 'confirmada' ? 'success' : 
                          solicitud.estado === 'completada' ? 'primary' : 
                          solicitud.estado === 'cancelada' ? 'danger' : 'secondary' 
                        %>">
                          <%= solicitud.estado %>
                        </span>
                      </td>
                      <td>
                        <a href="/solicitudes/<%= solicitud.id %>" class="btn btn-sm btn-info text-white">
                          <i class="fas fa-eye"></i> Ver
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center my-4">
              <i class="fas fa-file-alt fa-4x mb-3" style="color: rgba(0, 97, 110, 0.2);"></i>
              <p class="lead text-muted">No tienes solicitudes recientes</p>
              <a href="/solicitudes/nueva" class="btn btn-primary mt-2">
                <i class="fas fa-plus"></i> Crear una solicitud
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>