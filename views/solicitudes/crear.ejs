<div class="min-h-screen bg-gradient-to-br from-gray-100 via-white to-teal-50 flex items-center justify-center py-8 px-2">
    <div class="w-full max-w-xl mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl p-10 border-l-8 border-teal-500">
            <div class="mb-8 text-center">
                <div class="flex justify-center mb-2">
                    <span class="inline-flex items-center justify-center w-14 h-14 rounded-full bg-gradient-to-br from-teal-500 to-teal-300 shadow-lg">
                        <i class="fas fa-recycle text-3xl text-white"></i>
                    </span>
                </div>
                <h2 class="text-3xl font-extrabold text-gray-800 mb-1 tracking-tight">Nueva Solicitud de Retiro</h2>
                <p class="text-gray-500 text-base">Complete el formulario para solicitar un retiro de residuos</p>
            </div>
            <form action="/solicitudes/crear" method="POST" id="formCrearSolicitud" class="space-y-8">
                <!-- Información Básica -->
                <div>
                    <h3 class="text-lg font-bold mb-6 pb-2 border-b border-teal-100 flex items-center">
                        <i class="fas fa-info-circle text-teal-500 mr-2"></i> Información Básica
                    </h3>
                    <div class="space-y-6">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Tipo de Residuo *</label>
                            <div class="relative">
                                <span class="absolute left-3 top-2.5 text-teal-400"><i class="fas fa-flask"></i></span>
                                <select name="tipoResiduo" required class="w-full border border-gray-200 rounded-lg py-2 pl-10 pr-8 focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent appearance-none transition-all bg-gray-50 text-gray-700 text-base shadow-sm">
                                    <option value="">Seleccione un tipo</option>
                                    <% residuos.forEach(function(tipo) { %>
                                        <option value="<%= tipo.id %>"><%= tipo.nombre %></option>
                                    <% }); %>
                                </select>
                                <span class="absolute right-3 top-3 text-gray-400 pointer-events-none"><i class="fas fa-chevron-down"></i></span>
                            </div>
                            <p class="text-xs text-gray-400 mt-1 ml-1">Ejemplo: Aceite usado, solventes, etc.</p>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Cantidad Estimada *</label>
                            <div class="flex gap-2">
                                <span class="inline-flex items-center px-3 rounded-l-lg border border-r-0 border-gray-200 bg-gray-50 text-teal-400"><i class="fas fa-balance-scale"></i></span>
                                <input type="number" name="cantidad" required min="1" placeholder="Ej: 100" class="w-2/3 border-t border-b border-gray-200 py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent transition-all bg-gray-50 text-gray-700 text-base shadow-sm">
                                <select name="unidad" class="w-1/3 border-l-0 border border-gray-200 rounded-r-lg py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent bg-gray-50 transition-all text-base text-gray-700">
                                    <option value="kg">Kilogramos (kg)</option>
                                    <option value="l">Litros (L)</option>
                                    <option value="m3">Metros cúbicos (m³)</option>
                                    <option value="u">Unidades</option>
                                </select>
                            </div>
                            <p class="text-xs text-gray-400 mt-1 ml-1">Indique la cantidad aproximada.</p>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Descripción del Residuo *</label>
                            <div class="relative">
                                <span class="absolute left-3 top-2.5 text-teal-400"><i class="fas fa-align-left"></i></span>
                                <textarea name="descripcion" required rows="3" placeholder="Ej: Aceite usado, solventes, etc." class="w-full border border-gray-200 rounded-lg py-2 pl-10 px-3 focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent transition-all bg-gray-50 text-gray-700 text-base shadow-sm"></textarea>
                            </div>
                            <p class="text-xs text-gray-400 mt-1 ml-1">Describa el residuo de la forma más clara posible.</p>
                        </div>
                    </div>
                </div>
                <!-- Botón de envío -->
                <div class="pt-2 text-center">
                    <button type="submit" class="inline-flex items-center px-10 py-3 bg-gradient-to-r from-teal-500 to-teal-700 text-white text-lg font-bold rounded-xl shadow-lg hover:from-teal-600 hover:to-teal-800 transition-all duration-200 focus:outline-none focus:ring-4 focus:ring-teal-300">
                        <i class="fas fa-paper-plane mr-2"></i> Enviar Solicitud
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Estilos adicionales para responsividad y detalles visuales -->
<style>
    @media (max-width: 640px) {
        .min-h-screen {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }
        .p-10 {
            padding: 1.5rem !important;
        }
        .rounded-2xl {
            border-radius: 1.25rem !important;
        }
        .max-w-xl {
            max-width: 98vw !important;
        }
    }
    select:invalid {
        color: #a0aec0;
    }
    select:valid {
        color: #222;
    }
    textarea:focus, input:focus, select:focus {
        box-shadow: 0 0 0 2px #14b8a633;
    }
</style>