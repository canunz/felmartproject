<div>
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Nueva Solicitud de Retiro</h2>
        <p class="text-gray-600">Complete el formulario para solicitar un retiro de residuos</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <form action="/solicitudes/crear" method="POST" id="formCrearSolicitud">
            <!-- Información Básica -->
            <div class="mb-6">
                <h3 class="text-lg font-medium mb-4 pb-2 border-b">Información Básica</h3>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Tipo de Residuo *</label>
                        <select name="tipoResiduo" required class="w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent">
                            <option value="">Seleccione un tipo</option>
                            <% tiposResiduos.forEach(function(tipo) { %>
                                <option value="<%= tipo.id %>"><%= tipo.nombre %></option>
                            <% }); %>
                        </select>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Cantidad Estimada *</label>
                        <div class="flex">
                            <input type="number" name="cantidad" required min="1" class="w-full border border-gray-300 rounded-l-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent">
                            <select name="unidad" class="border-l-0 border border-gray-300 rounded-r-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent bg-gray-50">
                                <option value="kg">Kilogramos (kg)</option>
                                <option value="l">Litros (L)</option>
                                <option value="m3">Metros cúbicos (m³)</option>
                                <option value="u">Unidades</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Descripción del Residuo *</label>