<div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card shadow mt-5">
          <div class="card-body p-4">
            <h3 class="text-center mb-4">Restablecer Contraseña</h3>
            <p class="text-center mb-4">Ingresa tu nueva contraseña.</p>
            <form action="/usuarios/reset-password/<%= token %>" method="POST">
              <div class="mb-3">
                <label for="password" class="form-label">Nueva contraseña</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              <div class="mb-3">
                <label for="confirmarPassword" class="form-label">Confirmar contraseña</label>
                <input type="password" class="form-control" id="confirmarPassword" name="confirmarPassword" required>
              </div>
              <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Restablecer Contraseña</button>
              </div>
            </form>
            <div class="text-center mt-3">
              <p><a href="/login"><i class="fas fa-arrow-left me-2"></i>Volver a Iniciar Sesión</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>